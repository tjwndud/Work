<mvc:View controllerName="fiori.cl3.fioricrudcl315.controller.Zfcl315_02"
   xmlns:t="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:u="sap.ui.unified"
    xmlns:c="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    >
    <Page id="page" title="{i18n>title}">

         <Panel  id="id1"
                    class="sapUiResponsiveMargin"
                    headerText="Odata" 
                    width="auto">
                <t:Table 
                id="Table"
                rows="{/StdtSet}"
				selectionMode="Single"
				paste="onPaste"
				ariaLabelledBy="Airline"
                visibleRowCount = '6'>
                    <t:extension>
                        <OverflowToolbar >
                            <Title text="Airline Master Data"/>
                        </OverflowToolbar>
                    </t:extension>
                    <t:columns>
                        <t:Column width="auto">
                            <Label text="{/#StdtSet/StdtNo/@sap:label}" />
                            <t:template>
                                <Text text="{StdtNo}" wrapping="false" />   
                            </t:template>
                        </t:Column>
                        <t:Column width="auto">
                            <Label text="{/#StdtSet/Major/@sap:label}" />
                            <t:template>
                                <Text text="{Major}" wrapping="false" />   
                            </t:template>
                        </t:Column>
                        <t:Column width="auto">
                            <Label text="{/#StdtSet/StdtName/@sap:label}" />
                            <t:template>
                                <Text text="{StdtName}" wrapping="false" />   
                            </t:template>
                        </t:Column>
                        <t:Column width="auto">
                            <Label text="{/#StdtSet/Addr/@sap:label}" />
                            <t:template>
                                <Text text="{Addr}" wrapping="false" />   
                            </t:template>
                        </t:Column>
                        <t:Column width="auto">
                            <Label text="{/#StdtSet/Email/@sap:label}" />
                            <t:template>
                                <Text text="{Email}" wrapping="false" />   
                            </t:template>
                        </t:Column>
                        <t:Column width="auto">
                            <Label text="{/#StdtSet/Gender/@sap:label}" />
                            <t:template>
                                <Text text="{Gender}" wrapping="false" />   
                            </t:template>
                        </t:Column>
                    </t:columns>
                </t:Table>
            </Panel>

            <VBox alignItems="Center">
            <Panel class="sapUiResponsiveMargin" width="660px">
                <MessageStrip showIcon="true" text="Data control" showCloseButton="false" />
                <OverflowToolbar >
                    <ToolbarSpacer />
                    <Button text="Display" type="Accept" icon="sap-icon://detail-view" press="onDisplay" />
                    <Button text="Create"  type="Attention" icon="sap-icon://create" press="onCreate"/>
                    <Button text="Update"  type="Attention" icon="sap-icon://write-new-document" press="onUpdate"/>
                    <Button text="Delete"  type="Accept" icon="sap-icon://delete" press="onDelete" />
                </OverflowToolbar>
                <f:SimpleForm layout="ResponsiveGridLayout" title="Content">
                    <f:content>
                        <Label text="학번" />
                        <Input id="StdtNo" width="3rem"/>
                        <Label text="전공" />
                        <Input id="Major" width="10rem"/>
                        <Label text="이름" />
                        <Input id="StdtName" width="10rem"/>
                        <Label text="주소" />
                        <Input id="Addr" width="13rem"/>
                        <Label text="이메일" />
                        <Input id="Email" width="13rem"/>
                        <Label text="성별" />        
                        <Input id="Gender" width="3rem"/>
                    </f:content>
                </f:SimpleForm>
            </Panel>
            </VBox>

    </Page>
</mvc:View>