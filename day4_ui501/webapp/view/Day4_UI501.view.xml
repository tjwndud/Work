<mvc:View controllerName="code.cl3.day4ui501.controller.Day4_UI501"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page id="page" title="{i18n>title}">
    <VBox>
    <Panel headerText="PRO1" width="30%"  class="sapUiResponsiveMargin" accessibleRole="Region">
<!--<HBox에서 justifycontent="Center는 태그 아래의 요소를 중앙으로 위치시킨다."-->
        <HBox justifyContent="Center">  
            <Text text="Number" />
            <Input id= "num1" placeholder="입력체크" class="sapUiSmallMarginBegin" width="100px"/>
             <Button text="Press" class="sapUiSmallMarginBegin" press="onCheck" type="Success"/>
        </HBox>

    </Panel>

    <Panel headerText="PRO2" width="30%" class="sapUiResponsiveMargin">

        <HBox justifyContent="Center" >
        <Button id="btn1" icon="sap-icon://sum" text="Sum" press="onSum"  />
        <Input class="sapUiSmallMarginBegin" id = "out" placeholder="Result" editable="false" width="100px" />
        <Button class="sapUiSmallMarginBegin" icon="sap-icon://clear-all" press="onClear"/>
        </HBox>
    </Panel>

    <Panel headerText="PRO3" width="30%" class="sapUiResponsiveMargin">
        <HBox justifyContent="Center" >
        <Button class="sapUiCenter" text = "Continue 숫자 체크" press="onClick"/>
        </HBox>
    </Panel>

      <Panel headerText="PRO4" width="30%" class="sapUiResponsiveMargin">    
              <HBox justifyContent="Center"   >
                 <Input id="input1" width="100px" liveChange="onChange" />
              </HBox>
        </Panel>

<!--Panel 태그에서 class="sapuiResponsivMargin"은 반응형으로 간격을 조절할 수 있다-->
<!--class="" 이 문법으로 각 요소들 간의 간격을 조절할 수 있다-->

        <Panel headerText="PRO5" width="80%" class="sapUiResponsiveMargin"> 
          
            <HBox justifyContent="Center" > 
                <Input id="input2" width="100px" placeholder="Input"  />
                <Button text="APPEND" press="Input_Check()" class="sapUiSmallMarginBegin"/>
                <Button text="SHIFT(DEL)" press="onShft()" class="sapUiSmallMarginBegin"/>
                <Button text="POP(DEL)" press="onPop()" class="sapUiSmallMarginBegin"/>
                <Button text="LENGTH(DEL)" press="onLength()" class="sapUiSmallMarginBegin"/>
                <Button text="SPLICE(DEL)" press="onSplice()" class="sapUiSmallMarginBegin"/>
            </HBox>

        </Panel>

        <Panel headerText="PRO6" width="25%" class="sapUiResponsiveMargin">

            <HBox justifyContent="Center">
                <Input id = "arr1" width="100px" placeholder="PUT"/>
                <Button text="Del" press="onDel" class="sapUiSmallMarginBegin"/>
            </HBox>
        </Panel>
    </VBox>
    
    </Page>
</mvc:View>