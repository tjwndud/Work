<mvc:View controllerName="code.cl3.airlinecl3ui502.controller.GWserviceView02"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
    >
    <Page id="page" title="{i18n>title}">
        <VBox >
        <Panel class="sapUiResponsibleMargin" headerText="Gateway service" width="auto">
        

        
            <t:Table id="airline" rows="{/ScheduleSet}"  visibleRowCount = "auto" selectionMode="Single" width="auto">
                <t:extension>
					<OverflowToolbar style="Clear">
						<Title id="title" text="Products"/>
						<ToolbarSpacer/>
                         <Button text= "Search" press="onWord()"/>
                        <Input id="CID" placeholder="CarID" width="auto"/>
                         <Input id="CI2" placeholder="CarName" width="auto"/>
                       
						<ToolbarSeparator/>
					</OverflowToolbar>
				</t:extension>
            <t:columns>

					<t:Column width="auto">
						<Label text="Airline" />
						<t:template>
							<Text text="{Carrid}" wrapping="false" />
						</t:template>
					</t:Column>

					<t:Column width="auto">
						<Label text="Counrty Id" />
						<t:template>
							<Text text="{Connid}"/>
						</t:template>

					</t:Column>
                    <t:Column width="auto">
						<Label text="Country AirPort" />
						<t:template>
							<Text text="{Countryfr}"/>
						</t:template>
					</t:Column>

                    <t:Column width="auto">
						<Label text="City from" />
						<t:template>
							<Text text="{Cityfrom}"/>
						</t:template>
					</t:Column>

                      <t:Column width="auto">
						<Label text="Country to" />
						<t:template>
							<Text text="{Countryto}"/>
						</t:template>
					</t:Column>

                      <t:Column width="auto">
						<Label text="City to" />
						<t:template>
							<Text text="{Cityto}"/>
						</t:template>
					</t:Column>

                      <t:Column width="auto">
						<Label text="FlyTime" />
						<t:template>
							<Text text="{Fltime}"/>
						</t:template>
					</t:Column>
				</t:columns>
            
            </t:Table>
        
        </Panel>


    </VBox>
    </Page>
</mvc:View>