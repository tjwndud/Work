<mvc:View controllerName="code.cl3.day1ui501.controller.Day1View01"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page id="page" title="{i18n>title}">
    <VBox >
        <Text text="Hello World"/>
        <Button text="Say Hello" icon="sap-icon://accept" press=".onShowHello" type="Success"/>
    </VBox>
        <HBox>
            <Input id="score" placeholder="Enter score" />
            <Button text="check" press=".onCheck()" />
        </HBox>

        <Label text="Fruits" />
        <HBox >
            <Input id="fruits" placeholder="Enter alphabet" />
            <Button text="Fruits" icon="sap-icon://retail-store" press=".onFruits" type="Critical"/>
        </HBox>
    </Page>
</mvc:View>
