<mvc:View controllerName="code.cl3.airlinecl3ui501.controller.GWserviceView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
    >
    <Page id="page" title="{i18n>title}">
    <VBox >
        <Panel class="sapUiResponsibleMargin" headerText="Gateway service" width="auto">

        
            <t:Table id="airline" rows="{/AirlineSet}"  visibleRowCount = "20" selectionMode="Single" width="auto">
				<t:extension>
					<OverflowToolbar style="Clear">
						<Title id="title" text="Products"/>
						<ToolbarSpacer/>
						 <Button text= "Search" press="onWord()"/>
                        <Input id="CID" placeholder="CarID" width="auto"/>
						<ToolbarSpacer/>
						<SearchField
							placeholder="Filter"
							search="onSearch"
							width="auto"/>
						<ToolbarSeparator/>
					</OverflowToolbar>
				</t:extension>

            <t:columns>

					<t:Column width="auto">
						<Label text="Airline" />
						<t:template>
							<Text text="{Carrid}" wrapping="false" />
						</t:template>
					</t:Column>

					<t:Column width="auto">
						<Label text="Airline name" />
						<t:template>
							<Text text="{Carrname}"/>
						</t:template>

					</t:Column>
                    <t:Column width="auto">
						<Label text="Local currency" />
						<t:template>
							<Text text="{Currcode}"/>
						</t:template>
					</t:Column>

                    <t:Column width="auto">
						<Label text="Airline URL" />
						<t:template>
							<Text text="{Url}"/>
						</t:template>
					</t:Column>
					
					
				
					
					
					
				</t:columns>
            
            </t:Table>
        
        </Panel>


    </VBox>
    </Page>
</mvc:View>
